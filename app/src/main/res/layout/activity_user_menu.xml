<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuActivity">

    <RelativeLayout
        android:id="@+id/spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".menuActivity">

        <TextView
            android:id="@+id/userstorename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_centerHorizontal="true"
            android:text="가게이름"
            android:textColor="@color/black"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/userceoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"

            android:layout_marginTop="52dp"
            android:layout_marginEnd="12dp"
            android:text="사장명"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userceoname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="12dp"
            android:text="사장명: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userphonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="12dp"
            android:text="전화번호"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userphonenum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="12dp"
            android:text="전화번호: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userhtpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="12dp"
            android:text="결제방식"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userhtpay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="12dp"
            android:text="결제방식: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/usercategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="12dp"
            android:text="카테고리"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/usercategory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="12dp"
            android:text="카테고리: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="12dp"
            android:text="전체 메뉴"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/review_btn"
            android:layout_width="63dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/review_button" />

    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spec"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" />

</RelativeLayout>